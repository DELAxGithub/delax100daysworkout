# SwiftFormat Configuration for Consistent Code Style

# Format options
--indent 4
--tabwidth 4
--maxwidth 120
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first
--closingparen same-line
--commas inline
--decimalgrouping 3,4
--binarygrouping 4,8
--octalgrouping 4,8
--hexgrouping 4,8
--fractiongrouping disabled
--exponentgrouping disabled
--exponentcase lowercase
--redundanttype infer-locals-only
--self remove
--importgrouping testable-bottom
--patternlet inline
--stripunusedargs closure-only
--swiftversion 5.9

# Rules to enable
--enable isEmpty
--enable sortedImports
--enable redundantParens
--enable redundantReturn
--enable redundantSelf
--enable trailingCommas
--enable unusedArguments
--enable void
--enable wrapMultilineStatementBraces
--enable blankLinesAtStartOfScope
--enable blankLinesAtEndOfScope
--enable blankLinesBetweenScopes
--enable consecutiveSpaces
--enable duplicateImports
--enable elseOnSameLine
--enable hoistPatternLet
--enable indent
--enable linebreakAtEndOfFile
--enable numberFormatting
--enable spaceAroundBraces
--enable spaceAroundBrackets
--enable spaceAroundComments
--enable spaceAroundGenerics
--enable spaceAroundOperators
--enable spaceAroundParens
--enable spaceInsideBraces
--enable spaceInsideBrackets
--enable spaceInsideComments
--enable spaceInsideGenerics
--enable spaceInsideParens
--enable todos
--enable trailingSpace
--enable wrap
--enable wrapArguments

# Rules to disable (we handle these manually or they conflict)
--disable andOperator
--disable anyObjectProtocol
--disable assertionFailures
--disable braces
--disable conditionalAssignment
--disable emptyBraces
--disable enumNamespaces
--disable extensionAccessControl
--disable fileHeader
--disable markTypes
--disable modifierOrder
--disable organizeDeclarations
--disable preferKeyPath
--disable redundantClosure
--disable redundantExtensionACL
--disable redundantFileprivate
--disable redundantGet
--disable redundantInit
--disable redundantLet
--disable redundantLetError
--disable redundantNilInit
--disable redundantObjc
--disable redundantPattern
--disable redundantRawValues
--disable redundantVoidReturnType
--disable semicolons
--disable sortedSwitchCases
--disable strongOutlets
--disable strongifiedSelf
--disable typeSugar
--disable unavailableFunction
--disable unusedArguments
--disable wrapEnumCases
--disable yodaConditions

# File exclusions
--exclude Pods,Carthage,.build,.git,docs,Scripts
--exclude "**/Legacy/**" # Legacy code exempt from formatting

# Include specific paths
--include Delax100DaysWorkout/Components
--include Delax100DaysWorkout/Features
--include Delax100DaysWorkout/Utils
--include Delax100DaysWorkout/Models
--include Delax100DaysWorkout/Services

# Header configuration (optional)
--header strip

# Import grouping
--importgrouping testable-bottom